@model IEnumerable<PosteCifa.Models.AggiornamentoSpedizione>
@{
    ViewBag.Title = "Detail";
}


<table class="table">
    <tr>
        <th class="text-center">
            Data Spedizione
        </th>
        <th class="text-center">
            Destinazione
        </th>
        <th class="text-center">
            Data Consegna
        </th>
        <th class="text-center">
            #Cliente
        </th>
    </tr>

    <tr>
        <td class="text-center">
            @ViewBag.spedizione.DataSpedizione.ToShortDateString()
        </td>
        <td class="text-center">
            @ViewBag.spedizione.Destination
        </td>
        <td class="text-center">
            @ViewBag.spedizione.DataConsegna.ToShortDateString()
        </td>
        <td class="text-center">
            @ViewBag.spedizione.IdCliente
        </td>
    </tr>
</table>

@if (Model.Count() != 0)
{
    <table class="table">
        <tr>
            <th class="text-center">
                Stato
            </th>
            <th class="text-center">
                Luogo
            </th>
            <th class="text-center">
                Descrizione
            </th>
            <th class="text-center">
                Data Aggiornamento
            </th>
        </tr>

        @foreach (PosteCifa.Models.AggiornamentoSpedizione item in Model)
        {
            <tr>
                <td class="text-center">
                    @item.State
                </td>
                <td class="text-center">
                    @item.City
                </td>
                <td class="text-center">
                    @item.Description
                </td>
                <td class="text-center">
                    @item.Update.ToShortDateString()
                </td>
            </tr>
        }
    </table>
}
else
{
    <p class="text-center">Non sono ancora presenti aggiornamenti per questa Spedizione</p>
}
