@model PosteCifa.Models.User
@{
    ViewBag.Title = "Login";
}

<div class="d-flex flex-column align-items-center">
    <h2>Accedi se sei Admin</h2>
    <p>Non provare a fare il furbo, non sei Pitone Programmatore!</p>
</div>

@if (ViewBag.ErrorMessage != null)
{
    <p>@ViewBag.ErrorMessage</p>
}
@using (Html.BeginForm())
{
    <div class="d-flex flex-column align-items-center my-2">
        @Html.LabelFor(model => model.Username)
        @Html.TextBoxFor(model => model.Username)
    </div>

<div class="d-flex flex-column align-items-center my-2">
    @Html.LabelFor(model => model.Password)
    @Html.TextBoxFor(model => model.Password,"", new { type = "password" })
</div>

<div class="d-flex justify-content-center">
    <input type="submit" class="btn btn-primary text-warning my-2" value="Accedi" />
</div>
}

